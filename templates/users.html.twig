{% extends "base.html.twig" %}

{% block title %}Users{% endblock %}

{% block body %}
<h1>Users</h1>
<table class="table table-striped">
    <thead><tr><th>#</th><th>Name</th><th>Email</th></tr></thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
            </tr>
        {% else %}
            <tr><td colspan="3" class="text-center">No users found</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
